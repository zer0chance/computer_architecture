COMLPILER=gcc
COMLPILER_FLAGS=-Wall -Werror

SC_SOURCE_FILE=main.c
SC_EXECUTABLE_FILE=simple_computer

SA_SOURCE_FILE=asm_translator.c
SA_EXECUTABLE_FILE=asmt

all: 
	$(COMLPILER) $(COMLPILER_FLAGS) $(SC_SOURCE_FILE) -o $(SC_EXECUTABLE_FILE)
	$(COMLPILER) $(COMLPILER_FLAGS) $(SA_SOURCE_FILE) -o $(SA_EXECUTABLE_FILE)

debug:
	$(COMLPILER) $(COMLPILER_FLAGS) $(SOURCE_FILE) -DDEBUG -o $(EXECUTABLE_FILE)
