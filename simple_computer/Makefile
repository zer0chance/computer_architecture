COMPILER=gcc
COMPILER_FLAGS=-Wall -Werror

SC_SOURCE_FILE=main.c
SC_EXECUTABLE_FILE=simple_computer

SA_SOURCE_FILE=asm_translator.c
SA_EXECUTABLE_FILE=asmt

all: 
	$(COMPILER) $(COMPILER_FLAGS) $(SC_SOURCE_FILE) -o $(SC_EXECUTABLE_FILE)
	$(COMPILER) $(COMPILER_FLAGS) $(SA_SOURCE_FILE) -o $(SA_EXECUTABLE_FILE)

debug:
	$(COMPILER) $(COMPILER_FLAGS) $(SC_SOURCE_FILE) -DDEBUG -o $(SC_EXECUTABLE_FILE)

clean:
	rm $(SC_EXECUTABLE_FILE) $(S_EXECUTABLE_FILE)
